<div {{ attributes.addClass('bootstrap-accordion') }}>
  <div class="accordion" id="{{ accordion_id }}">
    {% for item in items %}
      <div class="card">
        <div class="card-header" id="{{ item.heading_id }}">
          <h2 class="mb-0">
            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#{{ item.id }}" aria-expanded="true" aria-controls="{{ item.id }}">
              {{ item.heading }}
            </button>
          </h2>
        </div>

        <div id="{{ item.id }}" class="collapse {% if loop.index0 == active_index %}show{% endif %}" aria-labelledby="{{ item.heading_id }}" data-parent="#{{ accordion_id }}">
          <div class="card-body">
            {{ item.body }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
