<div {{ attributes.addClass('bootstrap-tabs') }}>
  <ul class="nav nav-tabs" id="{{ tabs_id }}" role="tablist">
    {% for tab in tabs %}
      <li class="nav-item">
        <a class="nav-link {% if loop.index0 == active_index %}active{% endif %}" id="tab-{{ tabs_id }}-{{ loop.index0 }}" data-bs-toggle="tab" href="#tab-content-{{ tabs_id }}-{{ loop.index0 }}" role="tab" aria-controls="tab-content-{{ tabs_id }}-{{ loop.index0 }}" aria-selected="{% if loop.index0 == 0 %}true{% else %}false{% endif %}">{{ tab }}</a>
      </li>
    {% endfor %}
  </ul>
  <div class="tab-content" id="{{ tabs_id }}-content">
    {% for item in items %}
      <div class="tab-pane fade {% if loop.index0 == active_index %}show active{% endif %}" id="tab-content-{{ tabs_id }}-{{ loop.index0 }}" role="tabpanel" aria-labelledby="tab-{{ tabs_id }}-{{ loop.index0 }}">{{ item }}</div>
    {% endfor %}
  </div>
</div>
